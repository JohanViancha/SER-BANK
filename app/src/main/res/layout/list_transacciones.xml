<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:padding="20dp"
    >

    <LinearLayout

        android:layout_width="385dp"
        android:layout_height="348dp"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/list_transacciones"
            android:layout_width="362dp"
            android:layout_height="336dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="¿Para?"
                android:textColor="#040404"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/txtpara_listra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="#040404"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="¿De?"
                android:textColor="#040404"
                android:textSize="18sp"></TextView>


            <TextView
                android:id="@+id/txtde_listra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18dp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="133dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="¿Tipo transacción?"
                android:textColor="#040404"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/txttipo_listra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="163dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:textColor="#040404"
                android:textSize="18sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="195dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="Monto"
                android:textColor="#040404"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/txtmonto_listra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="225dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:textColor="#040404"
                android:textSize="18sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="260dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="Fecha"
                android:textColor="#040404"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/txtfecha_listra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="295dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:textColor="#040404"
                android:textSize="18sp"></TextView>

        </RelativeLayout>

    </LinearLayout>





</androidx.cardview.widget.CardView>